<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="MainWindow" Width="450" Height="450" ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Rows-->
        <Border Grid.Row="2" Grid.ColumnSpan="7" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Row="3" Grid.ColumnSpan="7" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.ColumnSpan="7" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Row="5" Grid.ColumnSpan="7" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Row="6" Grid.ColumnSpan="7" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Row="7" Grid.ColumnSpan="7" BorderBrush="LightGray" BorderThickness="1"/>
        <!--Columns-->
        <Border Grid.Column="0" Grid.RowSpan="8" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Column="1" Grid.RowSpan="8" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Column="2" Grid.RowSpan="8" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Column="3" Grid.RowSpan="8" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Column="4" Grid.RowSpan="8" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Column="5" Grid.RowSpan="8" BorderBrush="LightGray" BorderThickness="1"/>
        <Border Grid.Column="6" Grid.RowSpan="8" BorderBrush="LightGray" BorderThickness="1"/>
        <!--Removes border from first row-->
        <Border Grid.Row="0" Grid.ColumnSpan="7" Background="LightGray"/>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="7" Text="{Binding CurrentDayOfWeek}" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <!--Creates the title for each column ("Mandag", "Tirsdag", "Onsdag" Etc.)-->
        <Rectangle Grid.Column="0" Grid.Row="1" Fill="LightGray"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="MAN" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="1" Grid.Row="1" Fill="LightGray"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="TIRS" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="2" Grid.Row="1" Fill="LightGray"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Text="ONS" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="3" Grid.Row="1" Fill="LightGray"/>
        <TextBlock Grid.Column="3" Grid.Row="1" Text="TORS" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="4" Grid.Row="1" Fill="LightGray"/>
        <TextBlock Grid.Column="4" Grid.Row="1" Text="FRE" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="5" Grid.Row="1" Fill="LightGray"/>
        <TextBlock Grid.Column="5" Grid.Row="1" Text="LØR" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="6" Grid.Row="1" Fill="LightGray"/>
        <TextBlock Grid.Column="6" Grid.Row="1" Text="SØN" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--WEEKS OF THE MONTH-->
        <!--Week 1-->
        <Rectangle Grid.Column="0"  Grid.Row="2"/>
        <Rectangle Grid.Column="1"  Grid.Row="2"/>
        <Rectangle Grid.Column="2"  Grid.Row="2"/>
        <Rectangle Grid.Column="3"  Grid.Row="2"/>
        <Rectangle Grid.Column="4"  Grid.Row="2"/>
        <Rectangle Grid.Column="5"  Grid.Row="2"/>
        <Rectangle Grid.Column="6"  Grid.Row="2"/>
        <TextBlock Grid.Column="0"  Grid.Row="2" Text="1" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"  Grid.Row="2" Text="2" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2"  Grid.Row="2" Text="3" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="3"  Grid.Row="2" Text="4" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="4"  Grid.Row="2" Text="5" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5"  Grid.Row="2" Text="6" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="6"  Grid.Row="2" Text="7" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--Week 2-->
        <Rectangle Grid.Column="0"  Grid.Row="3"/>
        <Rectangle Grid.Column="1"  Grid.Row="3"/>
        <Rectangle Grid.Column="2"  Grid.Row="3"/>
        <Rectangle Grid.Column="3"  Grid.Row="3"/>
        <Rectangle Grid.Column="4"  Grid.Row="3"/>
        <Rectangle Grid.Column="5"  Grid.Row="3"/>
        <Rectangle Grid.Column="6"  Grid.Row="3"/>
        <TextBlock Grid.Column="0"  Grid.Row="3" Text="8" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"  Grid.Row="3" Text="9" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2"  Grid.Row="3" Text="10" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="3"  Grid.Row="3" Text="11" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="4"  Grid.Row="3" Text="12" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5"  Grid.Row="3" Text="13" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="6"  Grid.Row="3" Text="14" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Week 3-->
        <Rectangle Grid.Column="0"  Grid.Row="4"/>
        <Rectangle Grid.Column="1"  Grid.Row="4"/>
        <Rectangle Grid.Column="2"  Grid.Row="4"/>
        <Rectangle Grid.Column="3"  Grid.Row="4"/>
        <Rectangle Grid.Column="4"  Grid.Row="4"/>
        <Rectangle Grid.Column="5"  Grid.Row="4"/>
        <Rectangle Grid.Column="6"  Grid.Row="4"/>
        <TextBlock Grid.Column="0"  Grid.Row="4" Text="15" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"  Grid.Row="4" Text="16" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2"  Grid.Row="4" Text="17" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="3"  Grid.Row="4" Text="18" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="4"  Grid.Row="4" Text="19" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5"  Grid.Row="4" Text="20" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="6"  Grid.Row="4" Text="21" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--Week 4-->
        <Rectangle Grid.Column="0"  Grid.Row="5"/>
        <Rectangle Grid.Column="1"  Grid.Row="5"/>
        <Rectangle Grid.Column="2"  Grid.Row="5"/>
        <Rectangle Grid.Column="3"  Grid.Row="5"/>
        <Rectangle Grid.Column="4"  Grid.Row="5"/>
        <Rectangle Grid.Column="5"  Grid.Row="5"/>
        <Rectangle Grid.Column="6"  Grid.Row="5"/>
        <TextBlock Grid.Column="0"  Grid.Row="5" Text="22" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"  Grid.Row="5" Text="23" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2"  Grid.Row="5" Text="24" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="3"  Grid.Row="5" Text="25" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="4"  Grid.Row="5" Text="26" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5"  Grid.Row="5" Text="27" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="6"  Grid.Row="5" Text="28" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--Week 5-->
        <Rectangle Grid.Column="0"  Grid.Row="6"/>
        <Rectangle Grid.Column="1"  Grid.Row="6"/>
        <Rectangle Grid.Column="2"  Grid.Row="6"/>
        <Rectangle Grid.Column="3"  Grid.Row="6" Fill="LightGray"/>
        <Rectangle Grid.Column="4"  Grid.Row="6" Fill="LightGray"/>
        <Rectangle Grid.Column="5"  Grid.Row="6" Fill="LightGray"/>
        <Rectangle Grid.Column="6"  Grid.Row="6" Fill="LightGray"/>
        <TextBlock Grid.Column="0"  Grid.Row="6" Text="29" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"  Grid.Row="6" Text="30" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2"  Grid.Row="6" Text="31" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="3"  Grid.Row="6" Text="1" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="4"  Grid.Row="6" Text="2" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5"  Grid.Row="6" Text="3" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="6"  Grid.Row="6" Text="4" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--Week 6-->
        <Rectangle Grid.Column="0"  Grid.Row="7" Fill="LightGray"/>
        <Rectangle Grid.Column="1"  Grid.Row="7" Fill="LightGray"/>
        <Rectangle Grid.Column="2"  Grid.Row="7" Fill="LightGray"/>
        <Rectangle Grid.Column="3"  Grid.Row="7" Fill="LightGray"/>
        <Rectangle Grid.Column="4"  Grid.Row="7" Fill="LightGray"/>
        <Rectangle Grid.Column="5"  Grid.Row="7" Fill="LightGray"/>
        <Rectangle Grid.Column="6"  Grid.Row="7" Fill="LightGray"/>
        <TextBlock Grid.Column="0"  Grid.Row="7" Text="5" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="3"  Grid.Row="7" Text="8" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1"  Grid.Row="7" Text="6" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2"  Grid.Row="7" Text="7" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="4"  Grid.Row="7" Text="9" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5"  Grid.Row="7" Text="10" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="6"  Grid.Row="7" Text="11" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
    </Grid>
</Window>
